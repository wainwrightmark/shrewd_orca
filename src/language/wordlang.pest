file = {SOI ~ question ~ EOI}
WHITESPACE = _{ " "| "\t" | NEWLINE }
COMMENT = _{ "/*" ~ (!"*/" ~ ANY)* ~ "*/" }
question = {equation | expression}
equation = {expression ~ equality_operator ~ expression}
expression = {word_query+}
word_query = {query_term ~("+" ~ query_term)*}
query_term = ${ pattern | literal |  any | range | length | tag  } //manyany
literal = @{ASCII_ALPHA+}
question_marks = @{"?"+}
tag = ${"#" ~ literal}
pattern = ${
&(any? ~ (literal | question_marks | character_class) ) ~ 
&(literal? ~ (any | question_marks | character_class) ) ~ 
(literal | question_marks | any | character_class )+}
//manyany = {"**"}
any = @{"*"+}
character_class = ${"@" ~ ASCII_ALPHA}
length = @{ASCII_DIGIT+}
range = ${length ~ ".." ~ length}
//conjuction, disjunction, keyword, tag,  wildcard
equality_operator = { "=a"}
